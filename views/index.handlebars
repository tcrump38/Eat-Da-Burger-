<h1>Devour Your Burgers</h1>

<h3>List of Burgers</h3>
<h4>Hit EAT to consume and Add to  make  more burgers!</h4>

<h4>Add Burger</h4>

  <div class="row">
    <form class="create-form">

      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>
      <button type="submit" id="addBurger">Add Burger</button>
    </form>
  </div>

  <div class="row">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
    <li class="burgList">
      {{burger_name}}
    </li>
        {{/unless}}
      {{/each}}
    </ul>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
    <li id="eatList">
          <button class="eatBurger" data-id="{{id}}">
        EAT
      </button>
    </li>
        {{/unless}}
      {{/each}}
    </ul>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
    <li class="burgListDevo">
      {{burger_name}}
    </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>


